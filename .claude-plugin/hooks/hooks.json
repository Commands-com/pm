{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"HOOK EXECUTED: CLAUDE_PLUGIN_ROOT=${CLAUDE_PLUGIN_ROOT}\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"STOP HOOK: CLAUDE_PLUGIN_ROOT=${CLAUDE_PLUGIN_ROOT}\""
          }
        ]
      }
    ]
  }
}
