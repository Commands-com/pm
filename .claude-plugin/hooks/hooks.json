{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"PostToolUse hook executed at \\(now | strftime(\"%Y-%m-%d %H:%M:%S\")) - CLAUDE_PLUGIN_ROOT=${CLAUDE_PLUGIN_ROOT}\"' >> /tmp/claude-hook-test.log"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"Stop hook executed at \\(now | strftime(\"%Y-%m-%d %H:%M:%S\")) - CLAUDE_PLUGIN_ROOT=${CLAUDE_PLUGIN_ROOT}\"' >> /tmp/claude-hook-test.log"
          }
        ]
      }
    ]
  }
}
